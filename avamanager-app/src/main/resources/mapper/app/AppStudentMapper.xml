<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.avamanager.app.mapper.AppStudentMapper">
    
    <resultMap type="AppStudent" id="AppStudentResult">
        <result property="studentId"    column="student_id"    />
        <result property="studentName"    column="student_name"    />
        <result property="studentNumber"    column="student_number"    />
        <result property="collegeId"    column="college_id"    />
        <result property="majorId"    column="major_id"    />
        <result property="grade"    column="grade"    />
        <result property="administrativeClass"    column="administrative_class"    />
        <result property="birthday"    column="birthday"    />
        <result property="nation"    column="nation"    />
        <result property="politicalOutlook"    column="political_outlook"    />
        <result property="origin"    column="origin"    />
        <result property="studentStatus"    column="student_status"    />
        <result property="delFlag"    column="del_flag"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectAppStudentVo">
        select student_id, student_name, student_number, college_id, major_id, grade, administrative_class, birthday, nation, political_outlook, origin, student_status, del_flag, create_by, create_time, update_by, update_time, remark from app_student
    </sql>

    <select id="selectAppStudentList" parameterType="AppStudent" resultMap="AppStudentResult">
        <include refid="selectAppStudentVo"/>
        <where>  
            <if test="studentName != null  and studentName != ''"> and student_name like concat('%', #{studentName}, '%')</if>
            <if test="studentNumber != null  and studentNumber != ''"> and student_number = #{studentNumber}</if>
            <if test="collegeId != null "> and college_id = #{collegeId}</if>
            <if test="majorId != null "> and major_id = #{majorId}</if>
            <if test="grade != null  and grade != ''"> and grade = #{grade}</if>
            <if test="administrativeClass != null  and administrativeClass != ''"> and administrative_class = #{administrativeClass}</if>
            <if test="birthday != null "> and birthday = #{birthday}</if>
            <if test="nation != null  and nation != ''"> and nation = #{nation}</if>
            <if test="politicalOutlook != null  and politicalOutlook != ''"> and political_outlook = #{politicalOutlook}</if>
            <if test="origin != null  and origin != ''"> and origin = #{origin}</if>
            <if test="studentStatus != null "> and student_status = #{studentStatus}</if>
        </where>
    </select>
    
    <select id="selectAppStudentByStudentId" parameterType="Long" resultMap="AppStudentResult">
        <include refid="selectAppStudentVo"/>
        where student_id = #{studentId}
    </select>
        
    <insert id="insertAppStudent" parameterType="AppStudent" useGeneratedKeys="true" keyProperty="studentId">
        insert into app_student
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="studentName != null and studentName != ''">student_name,</if>
            <if test="studentNumber != null and studentNumber != ''">student_number,</if>
            <if test="collegeId != null">college_id,</if>
            <if test="majorId != null">major_id,</if>
            <if test="grade != null">grade,</if>
            <if test="administrativeClass != null">administrative_class,</if>
            <if test="birthday != null">birthday,</if>
            <if test="nation != null">nation,</if>
            <if test="politicalOutlook != null">political_outlook,</if>
            <if test="origin != null">origin,</if>
            <if test="studentStatus != null">student_status,</if>
            <if test="delFlag != null">del_flag,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="studentName != null and studentName != ''">#{studentName},</if>
            <if test="studentNumber != null and studentNumber != ''">#{studentNumber},</if>
            <if test="collegeId != null">#{collegeId},</if>
            <if test="majorId != null">#{majorId},</if>
            <if test="grade != null">#{grade},</if>
            <if test="administrativeClass != null">#{administrativeClass},</if>
            <if test="birthday != null">#{birthday},</if>
            <if test="nation != null">#{nation},</if>
            <if test="politicalOutlook != null">#{politicalOutlook},</if>
            <if test="origin != null">#{origin},</if>
            <if test="studentStatus != null">#{studentStatus},</if>
            <if test="delFlag != null">#{delFlag},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateAppStudent" parameterType="AppStudent">
        update app_student
        <trim prefix="SET" suffixOverrides=",">
            <if test="studentName != null and studentName != ''">student_name = #{studentName},</if>
            <if test="studentNumber != null and studentNumber != ''">student_number = #{studentNumber},</if>
            <if test="collegeId != null">college_id = #{collegeId},</if>
            <if test="majorId != null">major_id = #{majorId},</if>
            <if test="grade != null">grade = #{grade},</if>
            <if test="administrativeClass != null">administrative_class = #{administrativeClass},</if>
            <if test="birthday != null">birthday = #{birthday},</if>
            <if test="nation != null">nation = #{nation},</if>
            <if test="politicalOutlook != null">political_outlook = #{politicalOutlook},</if>
            <if test="origin != null">origin = #{origin},</if>
            <if test="studentStatus != null">student_status = #{studentStatus},</if>
            <if test="delFlag != null">del_flag = #{delFlag},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where student_id = #{studentId}
    </update>

    <delete id="deleteAppStudentByStudentId" parameterType="Long">
        delete from app_student where student_id = #{studentId}
    </delete>

    <delete id="deleteAppStudentByStudentIds" parameterType="String">
        delete from app_student where student_id in 
        <foreach item="studentId" collection="array" open="(" separator="," close=")">
            #{studentId}
        </foreach>
    </delete>
</mapper>